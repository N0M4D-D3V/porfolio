---
const { title } = Astro.props;
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
</section>
<hr />

<style>
  section {
    width: 100%;
    max-width: 700px;
    margin: 0 auto 28px;
  }

  hr {
    width: 100%;
    margin: 0;
    padding: 0;
  }

  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }

  @media (width <= 700px) {
    section {
      margin-bottom: 38px;
    }
  }
</style>
