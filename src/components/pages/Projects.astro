---
import BaseLayout from "../../layouts/BaseLayout.astro";

import projectsES from "@/data/projects/projects-es.json";
import projectsEN from "@/data/projects/projects-en.json";
import Project from "@/components/projects/Projects.astro";

const { lang } = Astro.props;

const title = "Projects";
const description =
  "Hire me to create your web, mobile, or hybrid application. Developer specialized in crafting unique applications.";
const permalink = `${Astro?.site?.href}${lang}/projects`;

let projLan = projectsEN;
if (lang === "es") {
  projLan = projectsES;
}
---

<BaseLayout
  title={title}
  description={description}
  permalink={permalink}
  current="projects"
  lang={lang}
>
  {
    projLan.description.map((sentence: string) => {
      return <p>{sentence}</p>;
    })
  }

  <hr />

  <Project projects={projLan.projects} />
</BaseLayout>

<style>
  p {
    margin-bottom: 1em;
  }
</style>
