---
import BaseLayout from "@/layouts/BaseLayout.astro";

import enLiterals from "@/data/fitness-hub/landing-en.json";
import esLiterals from "@/data/fitness-hub/landing-es.json";

const { language } = Astro.props;

const title = "Fitness Hub";
const description =
  "Hire me to create your web, mobile, or hybrid application. Developer specialized in crafting unique applications.";
const permalink = `${Astro?.site?.href}${language}/fitness-hub`;

let literals = enLiterals;
if (language === "es") {
  literals = esLiterals;
}

const appIcon = "/images/app-icon.svg";
const appScreenshot = "/images/app-screenshot.png";
const badges = [
  {
    link: "https://www.apple.com/es/app-store/",
    image: "/images/app-store-badge.svg",
  },
  {
    link: "https://play.google.com/store",
    image: "/images/google-play-badge.png",
  },
];
const authors = [
  {
    name: "N0M4D",
    url: "https://github.com/N0M4D-D3V",
  },
];
---

<BaseLayout
  title={title}
  description={description}
  permalink={permalink}
  current="projects"
  lang={language}
>
  <div class="container">
    <main>
      <div class="text-container">
        <img src={appIcon} class="app-icon" />
        <h1 class="heading">{title}</h1>
        <h2 class="subheading">{literals.subtitle}</h2>
        <div class="badge-container">
          {
            badges.map((badge) => (
              <div>
                <a href={badge.link} target="_blank">
                  <img src={badge.image} class="badge" />
                </a>
              </div>
            ))
          }
        </div>
        <p class="authors">
          Made with &#x2665; by
          {
            authors.map((author, index) => (
              <span>
                {index > 0
                  ? index === authors.length - 1
                    ? " and "
                    : ", "
                  : ""}
                <a href={author.url} target="_blank">
                  {author.name}
                </a>
              </span>
            ))
          }
        </p>
      </div>
      <div>
        <img src={appScreenshot} class="app-screenshot" />
      </div>
    </main>
  </div>
</BaseLayout>

<style>
  h1,
  h2,
  h3 {
    line-height: 1.2;
  }

  h1 {
    font-size: 5em;
    font-weight: 900;
    margin-bottom: 0.1em;
  }

  h2 {
    font-size: 2em;
    font-weight: 400;
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    min-height: 100vh;
    padding: 0;
  }

  main {
    margin: auto 0;
    padding-top: 30px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 80px;
  }

  .text-container {
    width: 60%;
  }

  .app-icon {
    width: 80px;
    box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.3);
    border-radius: 24px;
    margin-bottom: 10px;
    background-color: var(--fitness-hub-icon-bg);
  }

  .heading {
    font-family: "Titan One", sans-serif;
    color: var(--accent);
    margin-bottom: 16px;
  }

  .subheading {
    font-size: 1.75rem;
    font-weight: 300;
    margin-bottom: 30px;
  }

  .badge-container {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
  }

  .badge {
    margin-bottom: 20px;
    height: 50px;
  }
  .badge:hover {
    cursor: pointer;
  }

  .authors {
    font-weight: 300;
  }

  .authors a {
    color: inherit;
    font-weight: 500;
    text-decoration: none;
  }
  .authors a:hover {
    text-decoration: underline;
  }

  .app-screenshot {
    width: 220px;
  }

  @media (max-width: 768px) {
    main {
      flex-direction: column;
      padding: 40px;
    }
    .text-container {
      width: 100%;
    }
  }
</style>
