---
import BaseLayout from "../../layouts/BaseLayout.astro";
import MyHistory from "@/components/about/MyHistory.astro";
import MySkills from "@/components/about/MySkills.astro";
import MyContact from "@/components/about/MyContact.astro";

import enAbout from "../../data/about/about-en.json";
import esAbout from "../../data/about/about-es.json";

const { language } = Astro.props;

const title = "About";
const description =
  "Hire me to create your web, mobile, or hybrid application. Developer specialized in crafting unique applications.";
const permalink = `${Astro?.site?.href}${language}/about`;

let about = enAbout;
if (language === "es") {
  about = esAbout;
}
---

<BaseLayout
  title={title}
  description={description}
  permalink={permalink}
  current="about"
  lang={language}
>
  <MyHistory history={about.history} />
  <hr />
  <MySkills skills={about.skills} />
  <hr />
  <MyContact contact={about.contact} />
</BaseLayout>

<style>
  hr {
    width: 100%;
    margin: 0;
    padding: 0;
  }
</style>
