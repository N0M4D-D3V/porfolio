---
import { PROJECTS } from "./constants/projects";

import GitHub from "./icons/GitHub.astro";
import Section from "./Section.astro";

const projects = PROJECTS;
---

<Section>
  <ul>
    {
      projects.map(
        ({ url, description, highlights, name, isActive, github }) => {
          return (
            <li>
              <article>
                <header>
                  <h3>
                    <a
                      href={url}
                      target="_blank"
                      title={`See the project ${name}`}
                    >
                      {name}
                    </a>
                    {isActive && <span>â€¢</span>}
                  </h3>
                  <p class="px-2">{description}</p>
                </header>
                <footer>
                  {github && (
                    <a
                      class="github-code-link"
                      href={github}
                      target="_blank"
                      title={`See the code of ${name}`}
                    >
                      <GitHub class="size-4 md:size-5" />
                    </a>
                  )}
                  {highlights.map((highlight) => {
                    return <span>{highlight}</span>;
                  })}
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-inline: -16px;
  }

  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article a {
    color: rgb(254 240 138 / var(--tw-text-opacity));
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;

    text-align: justify;
  }

  article h3 span {
    color: rgb(0, 188, 47);
    animation-name: flicker;
    animation-duration: 3s;
    animation-timing-function: ease-in;
    animation-iteration-count: infinite;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background: #eee;
    color: #444;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  .github-code-link {
    margin-left: 10px;
    /* margin: 0 auto; */
  }

  @keyframes flicker {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0.25;
    }
    100% {
      opacity: 1;
    }
  }

  @media (width <= 700px) {
    ul {
      margin-inline: 0px;
    }
  }

  @media print {
    article h3 span {
      animation-name: none;
    }
  }
</style>
