---
import Section from "@common-components/Section.astro";
import Skills from "@components/cv/Skills.astro";

const { education } = Astro.props;
---

<Section title="Academic Qualifications">
  <ul>
    {
      education?.map(
        ({
          institution,
          startDate,
          endDate,
          area,
          summary,
          skills,
          img,
        }: any) => {
          const startYear = new Date(startDate).getFullYear();
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Current";
          const years = `${startYear} - ${endYear}`;

          return (
            <li>
              <article>
                <header>
                  <div class="logo-header">
                    <img src={`${img}`} alt="work icon" />

                    <div>
                      <h3>{institution}</h3>
                      <h4> {area} </h4>
                    </div>
                  </div>

                  <time>{years}</time>
                </header>

                <footer>
                  {summary.map((text: string) => {
                    return <p class="ps-5" set:html={text} />;
                  })}
                  <Skills dataset={skills} />
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  img {
    width: 60px;
    height: 60px;
    border-radius: 14px;
    border: black solid 1px;
  }

  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    color: var(--primary-color-accent);
    font-weight: 500;
    margin: 0;
  }

  article h4 {
    color: var(--primary-color);
    font-size: 1rem;
    font-weight: 200;
    margin: 0;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: var(--primary-color-accent);
    font-size: 0.85rem;
    min-width: 102px;
  }

  .logo-header {
    display: flex;
    align-items: center;
    gap: 5px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }

  @media print {
    p {
      font-family: Arial, sans-serif;
    }
  }
</style>
