---
import Section from "../common/Section.astro";

import { education } from "../../data/cv/cv-en.json";
import Skills from "../../components/cv/Skills.astro";
---

<Section title="Academic Qualifications">
  <ul>
    {
      education.map(
        ({ institution, startDate, endDate, area, summary, skills }) => {
          const startYear = new Date(startDate).getFullYear();
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Current";
          const years = `${startYear} - ${endYear}`;

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>{institution}</h3>
                  </div>

                  <time>{years}</time>
                </header>

                <footer>
                  <h4> {area} </h4>

                  {summary.map((text) => {
                    return <p class="ps-5">{text}</p>;
                  })}
                  <Skills dataset={skills} />
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
