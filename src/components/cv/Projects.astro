---
import GitHub from "@/icons/GitHub.astro";
import Section from "../common/Section.astro";

interface Project {
  url: string;
  description: string;
  highlights: string[];
  name: string;
  isActive?: boolean;
  github?: string;
  image?: string;
}

const { projects } = Astro.props;
---

<Section>
  <ul>
    {
      projects
        ?.sort(
          ({ isActive: activeA = false }, { isActive: activeB = false }) =>
            Number(activeB) - Number(activeA)
        )
        ?.map(
          ({
            url,
            description,
            highlights,
            name,
            isActive,
            github,
            image,
          }: Project) => {
            return (
              <li>
                <article>
                  <header>
                    <h3>
                      <a href={url} target="_blank" title={`${name}`}>
                        {name}
                      </a>
                      {isActive && <span>â€¢</span>}
                    </h3>
                    {image && (
                      <div style="margin-top: 10px;margin-bottom: 10px;">
                        <img
                          class="logo-img"
                          src={image}
                          alt="project logo image"
                        />
                      </div>
                    )}
                    <p>{description}</p>
                  </header>
                  <footer>
                    {github && (
                      <a
                        class="github-code-link"
                        href={github}
                        target="_blank"
                        title={`${name}`}
                      >
                        <GitHub />
                      </a>
                    )}
                    {/* {highlights.map((highlight: any) => {
                      return <span>{highlight}</span>;
                    })} */}
                  </footer>
                </article>
              </li>
            );
          }
        )
    }
  </ul>
</Section>

<style>
  .logo-img {
    height: 100px;
    width: 100px;
    object-fit: cover;
    margin: 0 auto;
    border: solid white 5px;
    border-radius: 25px;
    background-color: whitesmoke;

    transition:
      border 0.3s ease,
      box-shadow 0.3s ease;
  }
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-inline: -16px;
  }

  article:hover {
    border: 1px solid transparent;
    box-shadow: var(--primary-box-shadow);

    h3 {
      color: var(--primary-color);
    }

    .github-code-link {
      color: var(--primary-color);
    }

    .logo-img {
      border: solid var(--primary-color) 3px;
      box-shadow: var(--primary-box-shadow);
    }
  }

  article {
    border-radius: 15px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 16px;
    height: 100%;

    box-shadow: var(--secondary-box-shadow);

    transition:
      box-shadow 0.3s ease,
      border 0.3s ease;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }

  article h3 span {
    color: var(--primary-color);
    animation-name: flicker;
    animation-duration: 3s;
    animation-timing-function: ease-in;
    animation-iteration-count: infinite;
  }

  footer {
    width: 100%;
    flex-direction: row-reverse;
    display: flex;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background: #eee;
    color: #444;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  .github-code-link {
    margin-left: 10px;
  }

  @keyframes flicker {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0.25;
    }
    100% {
      opacity: 1;
    }
  }

  @media (width <= 700px) {
    ul {
      margin-inline: 0px;
      gap: 2%;
    }
  }

  @media print {
    article h3 span {
      animation-name: none;
    }
  }
</style>
