---
import Logo from "./Logo.astro";
import Nav from "./Nav.astro";

const { current = "", lang } = Astro.props;
---

<style>
  header {
    display: flex;
    margin: 0 auto;
    max-width: 1400px;
    padding: 2em;
    width: 100%;
  }
</style>

<header class="no-print">
  <Logo />
  <Nav current={current} lang={lang} />
</header>
