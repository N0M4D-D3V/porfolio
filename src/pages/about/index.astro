---
import BaseLayout from "../../layouts/BaseLayout.astro";
import MyHistory from "@/components/services/MyHistory.astro";
import MySkills from "@/components/services/MySkills.astro";
import MyContact from "@/components/services/MyContact.astro";

const title = "About";
const description =
  "Hire me to create your web, mobile, or hybrid application. Developer specialized in crafting unique applications.";
const permalink = `${Astro?.site?.href}about`;
---

<BaseLayout
  title={title}
  description={description}
  permalink={permalink}
  current="about"
>
  <MyHistory />
  <MySkills />
  <MyContact />
</BaseLayout>
