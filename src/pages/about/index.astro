---
import BaseLayout from "../../layouts/BaseLayout.astro";
import MyHistory from "@/components/about/MyHistory.astro";
import MySkills from "@/components/about/MySkills.astro";
import MyContact from "@/components/about/MyContact.astro";

const title = "About";
const description =
  "Hire me to create your web, mobile, or hybrid application. Developer specialized in crafting unique applications.";
const permalink = `${Astro?.site?.href}about`;
---

<BaseLayout
  title={title}
  description={description}
  permalink={permalink}
  current="about"
>
  <MyHistory />
  <hr />
  <MySkills />
  <hr />
  <MyContact />
</BaseLayout>

<style>
  hr {
    width: 100%;
    margin: 0;
    padding: 0;
  }
</style>
